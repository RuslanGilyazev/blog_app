<div class="comments">
<table class="table table-bordered">
	<tr>
		<td class="bg-warning show_comments">
		  <em><%= comment.commenter %></em>
		</td>
	</tr>
    <tr>
	  <td class="show_comments">
  		<%= comment.body %>
  	  </td>
  	</tr>

  <% if user_signed_in? && current_user.email==comment.commenter %>
    <tr>
	   <td class="destroy_comment">
    <%= link_to 'Destroy Comment', [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
       </td>
  	</tr>
  <% end %>

</table>
</div>