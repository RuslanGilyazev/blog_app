<!DOCTYPE html>
<html>
<head>
  <title>BlogApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/header' %>
	<% if alert %>
		<p class="alert alert-danger" role="alert"><%= alert %></p>
    <% end %>
    <% if notice %>
		<p class="alert alert-danger" role="alert"><%= alert %></p>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>

</body>
</html>
